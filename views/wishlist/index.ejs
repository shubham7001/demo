<% layout("/layouts/boilerplate.ejs") %>

<body>
<div class="all-listing-page min-vh-100 ">

<h2 class="mt-3 mb-3 all-listings-heading">Your Wishlist</h2>

<% if(allListings.length > 0) { %>
  <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
    <% allListings.forEach(listing => { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card listing-card h-100 relative">
          <i class="fa-solid fa-heart active heart-icon" data-id="<%= listing._id %>"></i>
          <div class="card-img-wrapper">
            <img src="<%= listing.image.url %>" class="card-img-top img-fluid" alt="listing_image" />
          </div>
          <div class="card-body listing-card-body">
            <p class="card-text listing-card-text">
              <b><%= listing.title %></b> <br />
              &#8377; <%= listing.price.toLocaleString("en-IN") %>/ night
            </p>
            <p class="listing-info">
              📍 <%= listing.location %>, <%= listing.country %>
            </p>
          </div>
        </div>
      </a>
    <% }) %>
  </div>
<% } else { %>
  <p class="no-lisitng-found-para">No wishlist items yet</p>
<% } %>

</div>
</body>
